{
  "version": 2,
  "builds": [
    {
      "src": "mindmap-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/play/([^/]+)",
      "dest": "/mindmap-app/build/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/mindmap-app/build/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  }
} 